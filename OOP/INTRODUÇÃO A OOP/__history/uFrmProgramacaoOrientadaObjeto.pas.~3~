  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Math;

type
  TForm1 = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Label5: TLabel;
    Label6: TLabel;
    Label7: TLabel;
    Label8: TLabel;
    edtTxa: TEdit;
    edtTxb: TEdit;
    edtTxc: TEdit;
    edtTya: TEdit;
    edtTyb: TEdit;
    edtTyc: TEdit;
    Label9: TLabel;
    Label10: TLabel;
