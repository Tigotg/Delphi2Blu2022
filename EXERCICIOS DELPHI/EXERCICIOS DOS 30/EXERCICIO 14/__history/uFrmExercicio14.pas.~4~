unit uFrmExercicio14;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    edtNum1: TEdit;
    edtNum2: TEdit;
    btnVerificar: TButton;
  private
    procedure ValidaNumMaior;
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

{ TForm1 }

procedure TForm1.ValidaNumMaior;
var
  xNum1, xNum2: Integer;
begin
  xNum1 := StrToInt(edtNum1.Text);
  xNum2 := StrToInt(edtNum2.Text);
  if xNum1 > xNum2 then
    ShowMessage('O Número ' + xNum1.ToString + ' é maior que o ' + xNum2.ToString)
  else if
    xNum2 > xNum1 then
    ShowMessage('O Número ' + xNum2.ToString + ' é maior que o ' + xNum1.ToString);

end;

end.
