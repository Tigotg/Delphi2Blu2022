{$R *.dfm}

{ TForm1 }

procedure TForm1.LerDoisNumeros;
var
  xNum1, xNum2: Double;
begin
  xNum1 := StrToFloat(AnsiUpperCase(InputBox('INFORMAR', 'Digite o 1º Número:', '')));
  xNum2 := StrToFloat(AnsiUpperCase(InputBox('INFORMAR', 'Digite o 2º Número:', '')));
  if xNum1 = xNum2 then
    ShowMessage('O Números Digitados São Iguais.')
  else if True then

    ShowMessage('Os Números Digitados são Diferentes.');

   ///talvez fazer com case
   ///
end;

end.
