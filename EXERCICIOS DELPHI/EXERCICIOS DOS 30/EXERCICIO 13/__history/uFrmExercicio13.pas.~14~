unit uFrmExercicio13;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    edtNum: TEdit;
    btnVerificar: TButton;
    procedure btnVerificarClick(Sender: TObject);
  private
    procedure LerNumero;
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

{ TForm1 }

procedure TForm1.btnVerificarClick(Sender: TObject);
begin
  LerNumero;
end;

procedure TForm1.LerNumero;
var
  xNum: String;
begin
  xNum := strtoint(edtNum.Text);
  if xNum > 10 then
    ShowMessage('O Numero ', + xNum + 'é Maior que 10.');
//  else
//    ShowMessage('O Número digitado não é maior que 10');
end;

end.
